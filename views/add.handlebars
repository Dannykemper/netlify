<section>

  <div class="container" style="margin-top: 5rem;">
    <h1>Add a post</h1>

    {{#each errors}}
    <div class="error">
      <p>{{text}}</p>
    </div>
    {{/each}}

    <form action="/posts/add" method="POST">
      <div class="form-group">
        <label class="mt-3" for="description">Post</label>
        <input type="text" class="form-control" id="description" name="description" aria-describedby="emailHelp" placeholder="Your message..."
          value={{description}}>
        <input type="submit" value="Send" class="btn btn-dark mt-3">
      </div>

    </form>
  </div>

</section>