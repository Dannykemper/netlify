<section>

  <div class="container" style="margin-top: 5rem;">
    <h1>Delete your profile</h1>

    {{#each errors}}
    <div class="error">
      <p>{{text}}</p>
    </div>
    {{/each}}

    <form action="/posts/delete" method="POST">
      <div class="form-group">
        <label class="mt-3" for="email">Your email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Email" value={{email}}>

        <input type="submit" value="Delete" class="btn btn-dark mt-3">
      </div>

    </form>
  </div>

</section>