<section>

  <div class="container" style="margin-top: 5rem;">
    <h1>Join Us!</h1>

    {{#each errors}}
    <div class="error">
      <p>{{text}}</p>
    </div>
    {{/each}}

    <form action="/posts/register" method="POST">
      <div class="form-group">
        <label class="mt-3" for="email">Your email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Email" value={{email}}>

        <label class="mt-3" for="email">Username</label>
        <input type="text" class="form-control" id="username" name="username" placeholder="Username" value={{username}}>

        <h4>Profile</h4>
        <label for="firstname">New first name</label>
        <input type="text" class="form-control" id="fname" name="fname" aria-describedby="emailHelp" placeholder="First name" value={{fname}}>

        <label class="mt-3" for="lastname">New last name</label>
        <input type="text" class="form-control" id="lname" name="lname" aria-describedby="emailHelp" placeholder="Last name" value={{lname}}>

        <label class="mt-3" for="password">Your password</label>
        <input type="text" class="form-control" id="password" name="password" placeholder="Password" value={{password}}>

        <label class="mt-3" for="password">Enter your password again</label>
        <input type="text" class="form-control" id="password2" name="password2" placeholder="Password" value={{password2}}>

        <input type="submit" value="Update" class="btn btn-dark mt-3">
      </div>

    </form>
  </div>

</section>